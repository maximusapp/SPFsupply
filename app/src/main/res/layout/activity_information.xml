<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.maximus09.spfsupply.InformationActivity">

    <include
        android:id="@+id/includeInformation"
        layout="@layout/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_information_admin"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/shape_buyers" />


                <EditText
                    android:id="@+id/companyName_information_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@null"
                    android:fontFamily="@font/latoregular"
                    android:text="MyCompany"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorDivider"/>

            <TextView
                android:id="@+id/text_company_location_edit_info"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/latoregular"
                android:text="@string/location_manuf"
                tools:ignore="UnusedAttribute"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="24dp" />


            <EditText
                android:id="@+id/text_company_location_info_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:text="@string/text_of_location"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                tools:ignore="UnusedAttribute"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="24dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:background="@color/colorDivider" />

            <TextView
                android:id="@+id/text_company_web"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/latoregular"
                android:text="WEBSITE"
                tools:ignore="UnusedAttribute"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="24dp" />

            <EditText
                android:id="@+id/web_site_text_admin"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:text="www.mycompany.com"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                tools:ignore="UnusedAttribute"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="24dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorDivider" />

            <TextView
                android:id="@+id/text_tax_amount"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/latoregular"
                android:text="@string/tax_amount"
                tools:ignore="UnusedAttribute"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="24dp" />

            <EditText
                android:id="@+id/info_edit_add_amount"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:ems="10"
                android:fontFamily="@font/latoregular"
                android:hint="@string/add_amount_manuf"
                android:inputType="numberDecimal"
                android:textColor="@color/colorGray"
                tools:ignore="UnusedAttribute"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="24dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorDivider" />

            <TextView
                android:id="@+id/text_shiping_cost"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/latoregular"
                android:text="@string/shipping_cost"
                tools:ignore="UnusedAttribute"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="24dp" />

            <EditText
                android:id="@+id/info_edit_shiping_cost"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:ems="10"
                android:fontFamily="@font/latoregular"
                android:hint="@string/add_amount_manuf"
                android:inputType="numberDecimal"
                android:textColor="@color/colorGray"
                tools:ignore="UnusedAttribute"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="24dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorDivider" />

            <TextView
                android:id="@+id/text_fee"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/latoregular"
                android:text="@string/fee"
                tools:ignore="UnusedAttribute"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="24dp" />

            <EditText
                android:id="@+id/info_edit_add_amount_fee"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:ems="10"
                android:fontFamily="@font/latoregular"
                android:hint="@string/add_amount_manuf"
                android:inputType="numberDecimal"
                android:textColor="@color/colorGray"
                tools:ignore="UnusedAttribute"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="24dp" />



            <TextView
                android:id="@+id/products_company_location"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/latoregular"
                android:text="PRODUCTS"
                tools:ignore="UnusedAttribute"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/add_productInformationActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/icon_plus"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="24dp" />

            <TextView
                android:id="@+id/add_productInformationActivityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:text="Add New"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="10dp" />

        </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_information_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp">
            </android.support.v7.widget.RecyclerView>


        </LinearLayout>


    </ScrollView>






















</LinearLayout>
