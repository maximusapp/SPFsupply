<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.example.maximus09.spfsupply.NewProductActivity">

    <include
        android:id="@+id/include"
        layout="@layout/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView_add_product_admin"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="15dp"
                        app:srcCompat="@drawable/icon_plus"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="16dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/title_new_product"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/latoregular"
                            android:text="TITLE"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="10dp" />

                        <EditText
                            android:id="@+id/edit_new_productName"
                            android:layout_width="189dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="1dp"
                            android:background="@null"
                            android:ems="10"
                            android:fontFamily="@font/latoregular"
                            android:hint="@string/enter_new_product_title"
                            android:inputType="textPersonName"
                            android:textColor="@color/colorGray"
                            tools:ignore="UnusedAttribute" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorDivider" />

            <TextView
                android:id="@+id/title_price_new_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/latoregular"
                android:text="PRICE ($)"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="24dp" />

            <EditText
                android:id="@+id/price_newProduct"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="112dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:ems="10"
                android:fontFamily="@font/latoregular"
                android:hint="@string/enter_new_product_price"
                android:inputType="numberDecimal"
                android:textColor="@color/colorGray"
                tools:ignore="UnusedAttribute"
                android:layout_marginRight="112dp"
                android:layout_marginLeft="24dp" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorDivider" />

            <TextView
                android:id="@+id/attachment_new_product"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/latoregular"
                android:text="ATTACHMENTS"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="24dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_addNewProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

            </android.support.v7.widget.RecyclerView>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorDivider" />

            <TextView
                android:id="@+id/description_new_product"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/latoregular"
                android:text="DESCRIPTION"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="24dp" />

            <EditText
                android:id="@+id/editText_description_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:inputType="textMultiLine" />



        </LinearLayout>


    </ScrollView>



</LinearLayout>
